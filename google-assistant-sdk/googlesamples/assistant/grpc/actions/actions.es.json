{
    "locale": "es",
    "manifest": {
      "displayName": "Controlar Kodi",
      "invocationName": "Controlar Kodi",
      "category": "PRODUCTIVITY"
    },
  "actions": [
    {
      "name": "PlayMusic",
      "availability": {
        "deviceClasses": [
          {
            "assistantSdkDevice": {}
          }
        ]
      },
      "intent": {
        "name": "com.minsoft.actions.PlayMusic",
        "parameters": [
          {
            "name": "artist",
            "type": "SchemaOrg_Person"
          },
          {
            "name": "album",
            "type": "SchemaOrg_MusicAlbum"
          }
        ],
        "trigger": {
          "queryPatterns": [
            "reproducir canciones de $SchemaOrg_Person:artist",
            "reproducir álbum $SchemaOrg_MusicAlbum:album",
            "escuchar canciones de $SchemaOrg_Person:artist",
            "escuchar álbum $SchemaOrg_MusicAlbum:album",
            "modo fiesta",
            "modo party",
            "party mode",
            "reproducir música",
            "escuchar música"
          ]
        }
      },
      "fulfillment": {
        "staticFulfillment": {
          "templatedResponse": {
            "items": [
              {
                "simpleResponse": {
                  "textToSpeech": "Reproduciendo música. $artist $album"
                }
              },
              {
                "deviceExecution": {
                  "command": "com.minsoft.actions.PlayMusic",
                  "params": {
                    "artist": "$artist",
                    "album": "$album"
                  }
                }
              }
            ]
          }
        }
      }
    },
    {
      "name": "Stop",
      "availability": {
        "deviceClasses": [
          {
            "assistantSdkDevice": {}
          }
        ]
      },
      "intent": {
        "name": "com.minsoft.actions.Stop",
        "trigger": {
          "queryPatterns": [
            "parar",
            "stop",
            "quitar"
          ]
        }
      },
      "fulfillment": {
        "staticFulfillment": {
          "templatedResponse": {
            "items": [
              {
                "simpleResponse": {
                  "textToSpeech": "Parando reproducción"
                }
              },
              {
                "deviceExecution": {
                  "command": "com.minsoft.actions.Stop"
                }
              }
            ]
          }
        }
      }
    },
    {
      "name": "Pause",
      "availability": {
        "deviceClasses": [
          {
            "assistantSdkDevice": {}
          }
        ]
      },
      "intent": {
        "name": "com.minsoft.actions.Pause",
        "trigger": {
          "queryPatterns": [
            "pausar",
            "pause",
            "interrumpir"
          ]
        }
      },
      "fulfillment": {
        "staticFulfillment": {
          "templatedResponse": {
            "items": [
              {
                "simpleResponse": {
                  "textToSpeech": "Pausando reproducción"
                }
              },
              {
                "deviceExecution": {
                  "command": "com.minsoft.actions.Pause"
                }
              }
            ]
          }
        }
      }
    },
    {
      "name": "Resume",
      "availability": {
        "deviceClasses": [
          {
            "assistantSdkDevice": {}
          }
        ]
      },
      "intent": {
        "name": "com.minsoft.actions.Resume",
        "trigger": {
          "queryPatterns": [
            "reanudar",
            "resume",
            "continuar"
          ]
        }
      },
      "fulfillment": {
        "staticFulfillment": {
          "templatedResponse": {
            "items": [
              {
                "simpleResponse": {
                  "textToSpeech": "Reanudando reproducción"
                }
              },
              {
                "deviceExecution": {
                  "command": "com.minsoft.actions.Resume"
                }
              }
            ]
          }
        }
      }
    }
  ],
  "types": [
    {
      "name": "$Speed",
      "entities": [
        {
          "key": "SLOWLY",
          "synonyms": [
            "despacio",
            "lento"
          ]
        },
        {
          "key": "NORMALLY",
          "synonyms": [
            "normal",
            "normalmente"
          ]
        },
        {
          "key": "QUICKLY",
          "synonyms": [
            "rápido",
            "rápdiamente",
            "veloz"
          ]
        }
      ]
    }
  ]
}